@model RealEstate.Models.News

@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "AddNew2";
    ViewBag.active = 4;
}
<!-- PAGE CONTAINER-->
@if (TempData["UserMessage"] != null)
{
    <div class="main-content">
        <div class="alert alert-success">
            <strong>Create New Successfully!</strong>
            @TempData["UserMessage"]
        </div>
    </div>
}
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>
                <div class="row m-t-25">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="page-titles">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Admin" asp-action="New">New</a></li>
                                        <li class="breadcrumb-item active">
                                            <a asp-area="" asp-controller="Admin" asp-action="AddNew">Add New</a>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                            <div class="card-body card-block">
                                <form asp-action="AddNew2" method="post" class="form-horizontal">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Title" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input asp-for="Title" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Contents" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input asp-for="Contents" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Contents" class="text-danger"></span>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Date" class="control-label"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input asp-for="Date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label asp-for="Images" class="form-control-file"></label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input asp-for="Images" class="form-control-file" type="file" />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="d-flex justify-content-between">
                                        <div class="form-group">
                                            <button class="btn btn-primary">
                                                <a asp-area="" asp-controller="Admin" asp-action="New" style="color:white">Back to List</a>
                                            </button>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-success" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    Copyright © 2023. All rights reserved. Team <a asp-area="" asp-controller="Admin" asp-action="index">LPH</a> with love
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


